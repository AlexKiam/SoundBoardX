<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/splash_progress_view"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@color/colorPrimaryDark"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/splash_logo"
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/splash_progress_view"
        android:layout_alignEnd="@+id/splash_progress_view"
        android:layout_alignBottom="@+id/splash_progress_view"
        android:layout_alignStart="@+id/splash_progress_view"/>

</RelativeLayout>